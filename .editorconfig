# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent-size = 4

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,ts,scss,css,go,pug}]
charset = utf-8

# 4 space indentation
[*.go]
indent_style = tab
indent_size = 4

# Indentation override for all TypeScript
[*.{ts,js}]
indent_size = 2
indent_style = space

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
